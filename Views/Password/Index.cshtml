@model IEnumerable<Auth_project.Models.PasswordTable>

@{
    ViewData["Title"] = "Index";

}

 
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<p>
  @*  <a onclick ="showInPopup('@Url.Action("Create","Sifre Oluştur",Context.Request.Scheme)','Yeni Sifre Olustur')" class = "btn btn-warning"><big style = "color :red;width:50px;">Sifre Oluştur</big></a>*@
</p>
<div class = "container">
<div class = "cold-md-4">

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SiteName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KullaniciAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sifre)
            </th>
            <th>

                <a onclick = "showInPopUp('@Url.Action("Create","Password",null,Context.Request.Scheme)','Sifre Olustur')" class = "btn btn-warning">Sifre Olustur</a>
  
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SiteName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KullaniciAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sifre)
            </td>
            <td>
                 <a onclick = "showInPopUp('@Url.Action("Edit","Password",null,Context.Request.Scheme)','Sifre Olustur')" class = "btn btn-warning">Edit</a> |
              @*  <a asp-action="Edit" asp-route-id="@item.Id"  style = "color : #FF5F00;">Edit</a>*@ 
                <a asp-action="Details" asp-route-id="@item.Id"  style = "color : green;">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" style = "color : red;">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


</div>
</div>






    <div class="modal" tabindex="-1" role="dialog" id = "form-modal">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">


            <h5 class="modal-title"></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
           
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary">Save changes</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>


